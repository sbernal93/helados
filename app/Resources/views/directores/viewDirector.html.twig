{% extends "layout.html.twig" %}

{% block pageHeader %}Director {{ director.di_nombre }} {{ director.di_apellido }} {% endblock %}
{% block optionalDescription %}{{ director.di_cedula }}{% endblock %}
{% block content %}
<div class="row">
    <div class="col-md-4">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Informacion General</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form">
                <div class="box-body">
                    <div class="col-md-1">
                        <label >Cedula: </label>
                    </div>
                    <div class="col-md-2">
                        <p>{{ director.di_cedula }}</p>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-1">
                        <label >Nombres: </label>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-8">
                        <p>{{ director.di_nombre }} {{ director.di_seg_nom }}</p>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-1">
                        <label >Apellidos: </label>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-8">
                        <p>{{ director.di_apellido }} {{ director.di_seg_ape }}</p>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-8">
                        <label >Descripcion </label>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-8">
                        <p>{{ helado.pro_descripcion }}</p>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-8">
                        <label >Cantidad de Bolas: </label>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-8">
                        <p>{{ helado.pro_cant_bol }}</p>
                    </div>


                </div><!-- /.box-body -->

                <div class="box-footer">
                    <div class="col-md-1">
                        <a href="/helados/edit/{{ helado.pro_id }}" type="submit" class="btn btn-primary">Editar</a>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-1">
                        <a href="/helados/delete/{{ helado.pro_id }}" type="submit" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
            </form>
        </div><!-- /.box -->
    </div><!-- /col -->
    {% endblock %}
    {% block scripts %}

{% endblock %}