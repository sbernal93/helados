{% extends "layout.html.twig" %}

{% block pageHeader %}Historia {{ historia.hi_id }} {% endblock %}
{% block content %}
<div class="row">
    <div class="col-md-4">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Informacion General</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form">
                <div class="box-body">
                    <div class="col-md-1">
                        <label >ID: </label>
                    </div>
                    <div class="col-md-2">
                        <p>{{ historia.hi_id }}</p>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-1">
                        <label >Evento: </label>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-8">
                        <p>{{ historia.hi_evento }}</p>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-1">
                        <label >Fecha: </label>
                    </div>
                    <div class="col-md-12"></div>
                    <div class="col-md-8">
                        <p>{{ historia.hi_fecha }}</p>
                    </div>

                </div><!-- /.box-body -->

                <div class="box-footer">
                    <div class="col-md-1">
                        <a href="/historias/edit/{{ historia.hi_id }}" type="submit" class="btn btn-primary">Editar</a>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-1">
                        <a href="/historias/delete/{{ historia.hi_id }}" type="submit" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
            </form>
        </div><!-- /.box -->
    </div><!-- /col -->

    {% endblock %}
    {% block scripts %}

{% endblock %}